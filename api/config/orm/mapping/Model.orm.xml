<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Entity\Model" table="model">
        <id name="id" type="string" length="36"/>

        <field name="name" length="100"/>
        <field name="overview" length="1000" nullable="true"/>
        <field name="pricePerDay" type="float" scale="2" precision="5"/>
        <field name="fuelType" length="50"/>
        <field name="seatingCapacity" type="integer"/>
        <field name="image" length="255" nullable="true"/>
        <field name="gearSystem" length="50"/>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime"/>
        <unique-constraints>
            <unique-constraint columns="name" name="UNIQ_model_name" />
        </unique-constraints>
        <one-to-many field="vehicles" target-entity="App\Entity\Vehicle" mapped-by="model">
            <cascade>
                <cascade-remove/>
            </cascade>        
        </one-to-many>
        <indexes>
            <index name="IDX_model_maker_id" columns="maker_id" />
        </indexes>
        <many-to-one field="maker" target-entity="App\Entity\Maker" inversed-by="models" />
        <many-to-one field="category" target-entity="App\Entity\Category" inversed-by="models" />
        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="markAsUpdated"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
